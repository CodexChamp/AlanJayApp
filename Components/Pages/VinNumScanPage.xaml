<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AlanJayApp.Components.Pages.VinNumScanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#F9F9F9">

    <Grid>
        <!-- twoâ€column blur background -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- main UI spans both columns -->
        <Grid Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <!-- optional BlazorWebView -->
            <BlazorWebView
        x:Name="blazorWebView"
        Grid.Row="0"
        HostPage="wwwroot/index.html" />

            <!-- scrollable footer -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout
          x:Name="CameraFooter"
          Padding="10"
          BackgroundColor="#e8f5e9"
          Spacing="10">

                   
                    

                    <!-- Scanner frame -->
                    <Border
            x:Name="cameraBorder"
            Stroke="#CCCCCC"
            StrokeThickness="3"
            WidthRequest="300"
            HeightRequest="300"
            HorizontalOptions="Center"
            VerticalOptions="Center">
                        <cv:CameraView
              x:Name="cameraView"
              BarCodeDetectionEnabled="True"
              CamerasLoaded="CameraView_CamerasLoaded"
              BarcodeDetected="CameraView_BarcodeDetected"
              WidthRequest="300"
              HeightRequest="300"
              HorizontalOptions="Center"
              VerticalOptions="Center" />
                    </Border>

                    <!-- Play/Stop toggle -->
                    <Grid
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="75"
            HeightRequest="75">
                        <shapes:Path
              x:Name="toggleShape"
              Stroke="Gray"
              StrokeThickness="2"
              Fill="Green"
              Data="M5,5 L5,65 L65,35 Z" />
                        <Button
              x:Name="controlButton"
              Text="Start"
              BackgroundColor="Transparent"
              TextColor="Transparent"
              Clicked="controlButton_Clicked" />
                    </Grid>

                    <!-- VIN (initial + scanned) -->
                    <Label
            x:Name="barcodeResult"
            Text="VIN: (none)"
            FontSize="20"
            TextColor="Black" 
            HorizontalOptions="Center" />

                    <!-- Capture & thumbnail strip -->
                    <Button
            x:Name="capturePhotoButton"
            Text="Capture Photo"
            Clicked="OnCapturePhotoClicked" />


                    <Border
    StrokeThickness="0"
    BackgroundColor="#e0e0e0"
    Padding="5"
    Margin="0,10,0,0"
    StrokeShape="RoundRectangle 8">
                        <ScrollView Orientation="Horizontal" HeightRequest="100">
                            <HorizontalStackLayout x:Name="photosContainer" Spacing="10" />
                        </ScrollView>
                    </Border>


                    <!-- Upload to Azure -->
                    <Button
            x:Name="uploadButton"
            Text="Upload Photos"
            IsEnabled="False"
            Clicked="OnUploadClicked" />
                    <Button
            x:Name="backButton"
            Text="Back"
            BackgroundColor="White"
            TextColor="#007AFF"
            Clicked="BackButton_Clicked" />

                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
