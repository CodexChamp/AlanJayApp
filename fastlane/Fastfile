# fastlane/Fastfile

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight (non-interactive)"
  lane :beta do
    ipa_path = ENV["FASTLANE_IPA_PATH"]

    deliver(
      ipa: ipa_path,
      app_identifier: "com.companyname.alanjayapp",   # ← YOUR iOS bundle ID here
      api_key_path:  "asc_key.p8",                    # ← the `.p8` file we’ll create in CI
      skip_metadata:  true,
      skip_screenshots: true,
      submit_for_review: false
    )
  end
end
