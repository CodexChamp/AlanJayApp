# fastlane/Fastfile

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :deliver do
    # We will set FASTLANE_IPA_PATH in our GitHub Actions workflow
    deliver(
      ipa: ENV['FASTLANE_IPA_PATH'],
      skip_metadata: true,    # i.e. do not upload metadata JSON
      skip_screenshots: true, # i.e. do not upload screenshots
      submit_for_review: false
    )
  end
end
