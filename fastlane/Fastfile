default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # The IPA path comes from FASTLANE_IPA_PATH in the GitHub Actions environment
    ipa_path = ENV["FASTLANE_IPA_PATH"]

    deliver(
      ipa: ipa_path,
      skip_metadata:  true,   # since we just want to upload the IPA
      skip_screenshots: true,  # no screenshots from CI 
      submit_for_review: false # donâ€™t auto-submit to review from CI
    )
  end
end
